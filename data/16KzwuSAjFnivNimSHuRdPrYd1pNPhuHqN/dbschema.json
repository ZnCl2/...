{
    "db_name": "Ichijs",
    "db_file": "data/users/ichijs.db",
    "version": 2,
    "maps": {
        ".+/data.json": {
            "to_table": [
                { "node": "post", "table": "post" }
            ]
        },
        ".+/content.json": {
            "to_keyvalue": [ "cert_user_id" ]
        }
    },
    "tables": {
        "post": {
            "cols": [
                ["name", "TEXT"],
                ["body", "TEXT"],
                ["time", "INTEGER"],
                ["hash", "TEXT"],
                ["json_id", "TEXT"]
            ],
            "indexes": ["CREATE UNIQUE INDEX post_key ON post(hash, json_id)"],
            "schema_changed": 2
        }
    }
}
