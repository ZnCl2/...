{
    "db_name": "ZeroUp",
    "db_file": "data/users/zeroup.db",
    "version": 2,
    "maps": {
        ".+/content.json": {
            "to_json_table": ["cert_auth_type", "cert_user_id"],
            "file_name": "data.json"
        },
        ".+/data.json": {
            "to_table": [
                {
                    "node": "file",
                    "table": "file",
                    "key_col": "file_name"
                },
                {
                    "node": "file_vote",
                    "table": "file_vote",
                    "key_col": "file_uri"
                },
                {
                    "node": "comment",
                    "table": "comment",
                    "key_col": "file_uri"
                },
                {
                    "node": "comment_vote",
                    "table": "comment_vote",
                    "key_col": "comment_uri",
                    "val_col": "vote"
                },
                {
                    "node": "subs",
                    "table": "subtitles"
                }
            ],
            "to_keyvalue": ["next_comment_id", "next_topic_id", "next_file_vote_id"]
        }
    },
    "tables": {
        "json": {
            "cols": [
                ["json_id", "INTEGER PRIMARY KEY AUTOINCREMENT"],
                ["directory", "TEXT"],
                ["file_name", "TEXT"],
                ["cert_auth_type", "TEXT"],
                ["cert_user_id", "TEXT"]
            ],
            "indexes": ["CREATE UNIQUE INDEX path ON json(directory, file_name)"],
            "schema_changed": 5
        },
        "file": {
            "cols": [
                ["file_name", "TEXT"],
                ["type", "TEXT"],
                ["is_featured", "INTEGER"],
                ["title", "TEXT"],
                ["description", "TEXT"],
                ["image_link", "TEXT"],
                ["size", "INT"],
                ["date_added", "DATETIME"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX file_key ON file(date_added, json_id)"],
            "schema_changed": 3
        },
        "subtitles": {
            "cols": [
                ["lang", "TEXT"],
                ["file_uri", "TEXT"],
                ["subfile", "TEXT"],
                ["srclang", "TEXT"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            
            "schema_changed": 4
        },
        "comment": {
            "cols": [
                ["body", "TEXT"],
                ["date_added", "DATETIME"],
                ["file_uri", "TEXT"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE INDEX file_uri ON comment(file_uri)", "CREATE UNIQUE INDEX comment_key ON comment(date_added, json_id)"],
            "schema_changed": 3
        },
        "file_vote": {
            "cols": [
                ["file_uri", "TEXT"],
                ["vote", "INTEGER"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX file_vote_key ON file_vote(file_uri, json_id)", "CREATE INDEX file_vote_uri ON file_vote(file_uri)"],
            "schema_changed": 4
        },
        "comment_vote": {
            "cols": [
                ["comment_uri", "TEXT"],
                ["vote", "INTEGER"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": ["CREATE UNIQUE INDEX comment_vote_key ON comment_vote(comment_uri, json_id)", "CREATE INDEX comment_vote_uri ON comment_vote(comment_uri)"],
            "schema_changed": 3
        }
    }
}
