{
    "db_name": "Millchan",
    "db_file": "data/millchan.db",
    "version": 2,
    "maps": {
        "users/.+/data.json": {
            "to_table": [ "posts", "boards", "modlogs" ]
        }
    },
    "tables": {
        "posts": {
            "cols": [
                ["id", "TEXT"],
                ["uri", "TEXT"],
                ["thread", "INTEGER"],
                ["subject", "TEXT"],
                ["body", "TEXT"],
                ["time", "INTEGER"],
                ["files", "TEXT"],
                ["directory", "TEXT"],
                ["last_edited","INTEGER"],
                ["capcode","INTEGER"],
                ["json_id", "INTEGER REFERENCES json (json_id)"]
            ],
            "indexes": [
		"CREATE UNIQUE INDEX uuid ON posts(id)",
		"CREATE UNIQUE INDEX post_id ON posts(id,json_id)"
		],
            "schema_changed": 13
        },
	"boards": {
		"cols": [
			["uri", "TEXT"],
			["title", "TEXT"],
			["config", "TEXT"],
			["json_id", "INTEGER REFERENCES json (json_id)"]
		],
		"indexes": ["CREATE UNIQUE INDEX board_id ON boards(uri,json_id)"],
		"schema_changed": 10
	},
	"modlogs": {
		"cols": [
			["uri", "TEXT"],
			["time", "INTEGER"],
			["action", "INTEGER"],
			["info", "TEXT"],
			["json_id", "INTEGER REFERENCES json (json_id)"]
			
		],
		"indexes": ["CREATE UNIQUE INDEX log_id ON modlogs(uri,action,info,json_id)"],
		"schema_changed": 12
	}
    }
}
