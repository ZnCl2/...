<!DOCTYPE html>
<html>
<head>
 <title>{{page.title}}</title>
 <meta charset="utf-8">
 <meta http-equiv="content-type" content="text/html; charset=utf-8" />
 <base href="" target="_top" id="base">
 <link rel="icon" type="image/png" href="/favicon.png" />
</head>
<body>

  <template id="hydeview_wrapper_template">
    {{ content }}
  </template>
  <div id="hydeview_wrapper">
    <div style="color: white">
      <p>
	This site is built with free software JS and unfortunately will not work
	without it as intended. If you want, you can just browse files in data/
	directory, they are mostly plain .md and videos (though since the latter
	are optional, that may require additional commands)
      </p>
      <p>
	It's also possible you're seeing this message because the site hasn't
	fully loaded yet...
      </p>
    </div>
  </div>

  <script type="text/javascript" src="js/thirdparty/ZeroFrame.js"></script>
  <script type="text/javascript" src="js/thirdparty/jquery.min.js"></script>
  <script type="text/javascript" src="js/thirdparty/marked.min.js"></script>
  <script type="text/javascript" src="js/thirdparty/js-yaml.min.js"></script>
  <script type="text/javascript" src="js/thirdparty/mustache.min.js"></script>
  <!-- <script type="text/javascript" src="js/thirdparty/webvttparser.js"></script> -->
  <script type="text/javascript" src="js/hydeview.js"></script>
  <script type="text/javascript">
    // this is beyond redemption, but seems to work (at least, on modern firefox)
    SYSVTT = VTTCue; // this is overriden by parser, MEH
    function loadVTT(n, addr) {
        page.cmd("fileGet", [`${page.getRoot()}/${addr}`], function(vtt) {
	    // console.log(vtt);
	    if (vtt !== null && vtt !== undefined) {
		var video = document.querySelector('video');
		console.log(video);
		var track = video.textTracks[n];
		console.log(track);
		
		var parser = new WebVTT.Parser(window, WebVTT.StringDecoder());
		parser.oncue = function(cue) {
		    // console.log(cue);
		    const cc = new SYSVTT(cue.startTime, cue.endTime, cue.text);
		    track.addCue(cc);
		};
		parser.parse(vtt);
		parser.flush();
		// track.mode = "showing";
	    }
	});
    }
    $(document).ready(function() {
	page.feedClickToJump = true;
	page.initialize("");
    });
  </script>
  <script type="text/javascript" src="js/thirdparty/vtt.js"></script>
</body>
</html>
