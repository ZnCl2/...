{
	"db_name": "ZeroUp",
	"db_file": "data/users/zeroup.db",
	"version": 2,
	"maps": {
		".+/content.json": {
			"to_json_table": [ "cert_auth_type", "cert_user_id" ],
			"file_name": "data.json"
		},
		".+/data.json": {
			"to_table": [
        "zm_message",
				{"node": "file", "table": "file", "key_col": "file_name"}
			],
			"to_keyvalue": ["next_comment_id", "next_topic_id"]
		}
	},
	"tables": {
		"json": {
			"cols": [
				["json_id", "INTEGER PRIMARY KEY AUTOINCREMENT"],
				["directory", "TEXT"],
				["file_name", "TEXT"],
				["cert_auth_type", "TEXT"],
				["cert_user_id", "TEXT"]
			],
			"indexes": ["CREATE UNIQUE INDEX path ON json(directory, file_name)"],
			"schema_changed": 5
		},
    "zm_message": {
        "cols": [
            ["body", "TEXT"],
            ["date_added", "INTEGER"],
            ["json_id", "INTEGER REFERENCES json (json_id)"]
        ],
        "indexes": ["CREATE UNIQUE INDEX zm_message_key ON zm_message(json_id, date_added)"],
        "schema_changed": 10
    },
		"file": {
			"cols": [
				["file_name", "TEXT"],
				["title", "TEXT"],
				["size", "INT"],
				["date_added", "DATETIME"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX file_key ON file(date_added, json_id)"],
			"schema_changed": 1
		}
	}
}
